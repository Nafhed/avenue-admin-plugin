<div class="gpm gpm-themes">
    <h1>
        {{"PLUGIN_AVENUE_ADMIN.AVENUE_ADMIN_EVENTS"|e|tu}}
    </h1>
    <div class="gpm gpm-themes themes card-row grid fixed-blocks pure-g">
        {% for type, count in grav.twig.types %}
            <a href="events/{{ type }}" class="pure-u-1-3 card-item">
                <div class="theme">
                    <div class="gpm-name">
                        {{ config.plugins['avenue-admin'].types[type].name|e ?: type|capitalize|e }}
                    </div>
                    <p>{{ count }} {{"PLUGIN_AVENUE_ADMIN.EVENT_ITEMS"|e|tu}}</p>
                </div>
            </a>
        {% endfor %}
    </div>
</div>
